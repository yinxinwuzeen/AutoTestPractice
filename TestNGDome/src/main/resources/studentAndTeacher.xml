<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="studentAndTeacher">
    <test name="runAll">
    <classes>
        <class name="com.course.code.groups.GroupsOnClass1"/>
        <class name="com.course.code.groups.GroupsOnClass2"/>
        <class name="com.course.code.groups.GroupsOnClass3"/>
    </classes>
</test>
    <test name="runStudent">
        <groups>
            <run>
                <include name="student"/>
            </run>
        </groups>
        <classes>
            <class name="com.course.code.groups.GroupsOnClass1"/>
            <class name="com.course.code.groups.GroupsOnClass2"/>
            <class name="com.course.code.groups.GroupsOnClass3"/>
        </classes>
    </test>
    <test name="runTeacher">
        <groups>
            <run>
                <include name="teacher"/>
            </run>
        </groups>
        <classes>
            <class name="com.course.code.groups.GroupsOnClass1"/>
            <class name="com.course.code.groups.GroupsOnClass2"/>
            <class name="com.course.code.groups.GroupsOnClass3"/>
        </classes>
    </test>
</suite>
